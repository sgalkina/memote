{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Memote Experimental Tests Configuration Schema",
    "description": "Validate an experimental data configuration file that defines additional memote tests.",

    "definitions": {
        "stringSet": {
            "type": "array",
            "items": { "type": "string" },
            "uniqueItems": true
        },
        "experiment": {
            "type": "object",
            "properties": {
                "medium": { "type": "string" },
                "objective": { "type": "string" },
                "constraints": { "$ref": "#/definitions/stringSet" },
                "label": { "type": "string" }
            },
            "additionalProperties": false
        },
        "medium": {
            "type": "object",
            "properties": {
                "filename": { "type": "string" },
                "label": { "type": "string" }
            },
            "additionalProperties": false
        }
    },

    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "enum": ["0.1"]
        },
        "medium": {
            "type": "object",
            "properties" : {
                "context": { "type": "string" },
                "definitions": {
                    "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/medium" }
                }
            },
            "additionalProperties": false
        },
        "essentiality": {
            "type": "object",
            "properties" : {
                "context": { "type": "string" },
                "experiments": {
                    "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/experiment" }
                }
            },
            "additionalProperties": false
        },
        "growth": {
            "type": "object",
            "properties" : {
                "context": { "type": "string" },
                "experiments": {
                    "type": "object",
                    "additionalProperties": { "$ref": "#/definitions/experiment" }
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["version"],
    "additionalProperties": false
}
